<style type="text/css" media="screen">
  body, input { font: 18px "lucida grande",tahoma,verdana,arial,sans-serif; margin: 20px; }
  h1 { font-size: 48px; text-align: center; color: #313131;}
  h1 span { margin-left: 20px;}
  .content { clear: both; margin-top: 20px; }
  .logo { width: 620px; float: left; }
  .details { width: 40%; float: left; }
  ul { padding-left: 20px;}
  ul li { list-style-type: disc;}
  .warning { font-size: 12px; color: #AAA; }
  #fb { position: absolute; right: 100px; bottom: 150px; }
